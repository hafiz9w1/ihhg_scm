<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="view_represented_stores_kanban">
          <field name="name">represented.stores.kanban</field>
          <field name="model">represented.stores</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <field name="date_from"/>
                  <field name="date_to"/>
                  <field name="number"/>
                  <field name="store_regulations_id"/>
                  <templates>
                      <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                              <div class="o_kanban_record_top mb16">
                                  <div class="o_kanban_record_headings mt4">
                                      <strong>Number: </strong><div class="o_kanban_record_title"><field name="number"/></div>
                                  </div>
                              </div>
                              <div class="o_kanban_record_top mb16">
                                  <div class="o_kanban_record_headings mt4">
                                      <strong>Date From: </strong><div class="o_kanban_record_title"><field name="date_from"/></div>
                                  </div>
                              </div>
                          </div>
                      </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <record id="view_represented_stores_tree" model="ir.ui.view">
          <field name="name">represented.stores.tree</field>
          <field name="model">represented.stores</field>
          <field name="priority">2</field>
          <field name="arch" type="xml">
              <tree string="Represented Stores">
                  <field name="date_from"/>
                  <field name="date_to"/>
                  <field name="number"/>
                  <field name="store_regulations_id"/>
              </tree>
          </field>
      </record>

      <record id="view_represented_stores_form" model="ir.ui.view">
          <field name="name">represented.stores.form</field>
          <field name="model">represented.stores</field>
          <field name="arch" type="xml">
              <form string="Represented Stores" >
              <sheet>
                  <group>
                      <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="number"/>
                        <field name="store_regulations_id"/>
                      </group>
                  </group>
              </sheet>
              </form>
          </field>
      </record>

      <record id="view_represented_stores_filter" model="ir.ui.view">
          <field name="name">represented.stores.list.select</field>
          <field name="model">represented.stores</field>
          <field name="priority" eval="15"/>
          <field name="arch" type="xml">
              <search string="Search Represented Stores">
                  <field name="date_from"/>
                  <field name="date_to"/>
                  <field name="number"/>
                  <field name="store_regulations_id"/>
                  <group expand="0" string="Group By">
                      <filter string="NUmber" name="number" domain="[]" context="{'group_by': 'number'}"/>
                  </group>
             </search>
          </field>
      </record>

      <record id="action_represented_stores_open" model="ir.actions.act_window">
          <field name="name">Represented Stores</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">represented.stores</field>
          <field name="view_mode">kanban,tree,form</field>
          <field name="search_view_id"/>
          <field name="context">{}</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  To create a new record
              </p><p>
                  <br/> Click on "Create"
              </p>
          </field>
      </record>

      <record id="represented_stores_action_view_kanban" model="ir.actions.act_window.view">
          <field name="sequence" eval="1"/>
          <field name="view_mode">kanban</field>
          <field name="view_id" ref="ihhg_master.view_represented_stores_kanban"/>
          <field name="act_window_id" ref="action_represented_stores_open"/>
      </record>

      <record id="represented_stores_action_view_tree" model="ir.actions.act_window.view">
          <field name="sequence" eval="2"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="ihhg_master.view_represented_stores_tree"/>
          <field name="act_window_id" ref="action_represented_stores_open"/>
      </record>

      <record id="represented_stores_action_view_form" model="ir.actions.act_window.view">
          <field name="sequence" eval="3"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="ihhg_master.view_represented_stores_form"/>
          <field name="act_window_id" ref="action_represented_stores_open"/>
      </record>
  </data>
</odoo>
