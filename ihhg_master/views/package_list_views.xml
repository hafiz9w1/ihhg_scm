<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="view_package_list_kanban">
          <field name="name">ihh.package.list.kanban</field>
          <field name="model">ihh.package.list</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <field name="name"/>
                  <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong>Package Item: </strong><div class="o_kanban_record_title"><field name="name"/></div>
                                </div>
                            </div>
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong>Package: </strong><div class="o_kanban_record_title"><field name="package_id"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <record id="view_package_list_tree" model="ir.ui.view">
          <field name="name">ihh.package.list.tree</field>
          <field name="model">ihh.package.list</field>
          <field name="priority">2</field>
          <field name="arch" type="xml">
              <tree string="Name">
                  <field name="name"/>
                  <field name="package_id"/>
              </tree>
          </field>
      </record>

      <record id="view_package_list_form" model="ir.ui.view">
          <field name="name">ihh.package.list.form</field>
          <field name="model">ihh.package.list</field>
          <field name="arch" type="xml">
              <form string="Name" class="o_sale_order">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="package_id"/>
                      </group>
                  </group>
              </sheet>
              </form>
          </field>
      </record>

      <record id="view_package_list_filter" model="ir.ui.view">
          <field name="name">ihh.package.list.list.select</field>
          <field name="model">ihh.package.list</field>
          <field name="priority" eval="15"/>
          <field name="arch" type="xml">
              <search string="Search name">
                  <field name="name"/>
                  <field name="package_id"/>
                  <group expand="0" string="Group By">
                      <filter string="Name" name="name" domain="[]" context="{'group_by': 'name'}"/>
                  </group>
             </search>
          </field>
      </record>

      <record id="action_package_list_open" model="ir.actions.act_window">
          <field name="name">Package List</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">ihh.package.list</field>
          <field name="view_mode">kanban,tree,form</field>
          <field name="search_view_id"/>
          <field name="context">{}</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  To create a new record
              </p><p>
                  <br/> Click on "Create"
              </p>
          </field>
      </record>

      <record id="package_list_action_view_kanban" model="ir.actions.act_window.view">
          <field name="sequence" eval="1"/>
          <field name="view_mode">kanban</field>
          <field name="view_id" ref="ihhg_master.view_package_list_kanban"/>
          <field name="act_window_id" ref="action_package_list_open"/>
      </record>

      <record id="package_list_action_view_tree" model="ir.actions.act_window.view">
          <field name="sequence" eval="2"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="ihhg_master.view_package_list_tree"/>
          <field name="act_window_id" ref="action_package_list_open"/>
      </record>

      <record id="package_list_action_view_form" model="ir.actions.act_window.view">
          <field name="sequence" eval="3"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="ihhg_master.view_package_list_form"/>
          <field name="act_window_id" ref="action_package_list_open"/>
      </record>
  </data>
</odoo>
