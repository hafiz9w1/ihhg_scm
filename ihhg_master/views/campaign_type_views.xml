<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="view_campaign_type_tree" model="ir.ui.view">
          <field name="name">ihh.campaign.type.tree</field>
          <field name="model">ihh.campaign.type</field>
          <field name="priority">2</field>
          <field name="arch" type="xml">
              <tree string="Name">
                  <field name="name"/>
              </tree>
          </field>
      </record>

      <record id="view_campaign_type_form" model="ir.ui.view">
          <field name="name">ihh.campaign.type.form</field>
          <field name="model">ihh.campaign.type</field>
          <field name="arch" type="xml">
              <form string="Name" class="o_sale_order">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                          <field name="active" invisible="1"/>
                      </group>
                  </group>
              </sheet>
              </form>
          </field>
      </record>

      <record id="view_campaign_type_filter" model="ir.ui.view">
          <field name="name">ihh.campaign.type.list.select</field>
          <field name="model">ihh.campaign.type</field>
          <field name="priority" eval="15"/>
          <field name="arch" type="xml">
              <search string="Search name">
                  <field name="name"/>
             </search>
          </field>
      </record>

      <record id="action_campaign_type_open" model="ir.actions.act_window">
          <field name="name">Campaign Type</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">ihh.campaign.type</field>
          <field name="view_mode">tree,form</field>
          <field name="search_view_id"/>
          <field name="context">{}</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  To create a new record
              </p><p>
                  <br/> Click on "Create"
              </p>
          </field>
      </record>
  </data>
</odoo>
