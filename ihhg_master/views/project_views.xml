<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record id="project_form_inherit" model="ir.ui.view">
            <field name="name">project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
              <!-- Add project_date_deadline, notebook(scm_entry_id, selection_criteria_id) in project form view  -->
              <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="project_date_deadline"/>
              </xpath>
              <xpath expr="//page[@name='settings']" position="after">
                  <page name="scm_page" string="SCM and Selection">
                    <group>
                      <group>
                        <field name="scm_entry_id" string="SCM"/>
                      </group>
                      <group>
                        <field name="selection_criteria_id" string="Selection Criteria"/>
                      </group>
                    </group>
                  </page>
              </xpath>
            </field>
        </record>

        <record id="project_task_form_inherit" model="ir.ui.view">
          <field name="name">project.task.form</field>
          <field name="model">project.task</field>
          <field name="inherit_id" ref="project.view_task_form2"/>
          <field name="arch" type="xml">
            <!-- Add project_offset for task in task form view  -->
            <xpath expr="//field[@name='date_deadline']" position="after">
              <field name="project_offset"/>
            </xpath>
          </field>
        </record>

        <record id="project_form_simplified_inherit" model="ir.ui.view">
          <field name="name">project.create.form</field>
          <field name="model">project.project</field>
          <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
          <field name="arch" type="xml">
            <!-- Add project_template and project_date_deadline in create project form view  -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="project_template" />
                <field name="project_date_deadline" />
            </xpath>
          </field>
        </record>

        <record id="project_form_simplified_footer_inherit" model="ir.ui.view">
          <field name="name">project.create.form</field>
          <field name="model">project.project</field>
          <field name="inherit_id" ref="project.project_project_view_form_simplified_footer"/>
          <field name="arch" type="xml">
            <!-- Add copy_project_as_template button in form footer in project form view  -->
            <xpath expr="//footer/button[@name='action_view_tasks']" position="after">
                <button type="object" name="copy_project_as_template" string="Create from Template" class="btn-primary o_open_tasks" attrs="{'invisible': [('project_template', '=', False)]}" />
            </xpath>
            <xpath expr="//footer/button[@name='action_view_tasks']" position="attributes">
              <attribute name="attrs" attrs="{'invisible': [('project_template', '=', True)]}"></attribute>
            </xpath>
          </field>
        </record>

        <!-- SCM menus -->
          <menuitem id="menu_project_posm"
            name="POSM"
            parent="project.menu_main_pm" />

          <menuitem id="menu_project_posm_posm_master"
            action="product.product_template_action"
            name="POSM Master"
            parent="menu_project_posm" />

          <menuitem id="menu_project_scm"
            name="SCM"
            parent="project.menu_main_pm" />

          <menuitem id="menu_project_scm_address"
            action="account.res_partner_action_customer"
            name="Address"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_scm_entry"
            action="ihhg_master.action_scm_entry_open"
            name="SCM Entry"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_channel"
            action="ihhg_master.action_channel_open"
            name="Channel"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_represented_store"
            action="ihhg_master.action_represented_stores_open"
            name="Represented Stores"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_selection_criteria"
            action="ihhg_master.action_selection_criteria_open"
            name="Selection Criteria"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_store_regulations"
            action="ihhg_master.action_store_regulations_open"
            name="Store Regulations"
            parent="menu_project_scm" />

          <menuitem id="menu_project_scm_store_regulation_entry"
            action="ihhg_master.action_store_regulation_entry_open"
            name="Store Regulation Entry"
            parent="menu_project_scm" />
  </data>
</odoo>
