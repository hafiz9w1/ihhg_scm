<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="view_selection_criteria_kanban">
          <field name="name">selection.criteria.kanban</field>
          <field name="model">selection.criteria</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <field name="name"/>
                  <templates>
                      <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                              <div class="o_kanban_record_top mb16">
                                  <div class="o_kanban_record_headings mt4">
                                      <strong>Name: </strong><div class="o_kanban_record_title"><field name="name"/></div>
                                  </div>
                              </div>
                          </div>
                      </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <record id="view_selection_criteria_tree" model="ir.ui.view">
          <field name="name">selection.criteria.tree</field>
          <field name="model">selection.criteria</field>
          <field name="priority">2</field>
          <field name="arch" type="xml">
              <tree string="Name">
                  <field name="name"/>
              </tree>
          </field>
      </record>

      <record id="view_selection_criteria_form" model="ir.ui.view">
          <field name="name">selection.criteria.form</field>
          <field name="model">selection.criteria</field>
          <field name="arch" type="xml">
              <form string="Name" class="o_sale_order">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                      </group>
                  </group>
              </sheet>
              </form>
          </field>
      </record>

      <record id="view_selection_criteria_filter" model="ir.ui.view">
          <field name="name">selection.criteria.list.select</field>
          <field name="model">selection.criteria</field>
          <field name="priority" eval="15"/>
          <field name="arch" type="xml">
              <search string="Search name">
                  <field name="name"/>
                  <group expand="0" string="Group By">
                      <filter string="Name" name="name" domain="[]" context="{'group_by': 'name'}"/>
                  </group>
             </search>
          </field>
      </record>

      <record id="action_selection_criteria_open" model="ir.actions.act_window">
          <field name="name">Selection Criteria</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">selection.criteria</field>
          <field name="view_mode">kanban,tree,form</field>
          <field name="search_view_id"/>
          <field name="context">{}</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  To create a new record
              </p><p>
                  <br/> Click on "Create"
              </p>
          </field>
      </record>

      <record id="selection_criteria_action_view_kanban" model="ir.actions.act_window.view">
          <field name="sequence" eval="1"/>
          <field name="view_mode">kanban</field>
          <field name="view_id" ref="ihhg_master.view_selection_criteria_kanban"/>
          <field name="act_window_id" ref="action_selection_criteria_open"/>
      </record>

      <record id="selection_criteria_action_view_tree" model="ir.actions.act_window.view">
          <field name="sequence" eval="2"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="ihhg_master.view_selection_criteria_tree"/>
          <field name="act_window_id" ref="action_selection_criteria_open"/>
      </record>

      <record id="selection_criteria_action_view_form" model="ir.actions.act_window.view">
          <field name="sequence" eval="3"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="ihhg_master.view_selection_criteria_form"/>
          <field name="act_window_id" ref="action_selection_criteria_open"/>
      </record>
  </data>
</odoo>
