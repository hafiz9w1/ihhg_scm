<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
        <record model="ir.ui.view" id="view_store_regulations_kanban">
          <field name="name">store.regulations.kanban</field>
          <field name="model">store.regulations</field>
          <field name="arch" type="xml">
              <kanban class="o_kanban_mobile">
                  <field name="package_name"/>
                  <field name="store_regulation_entry_id"/>
                  <templates>
                      <t t-name="kanban-box">
                          <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                              <div class="o_kanban_record_top mb16">
                                  <div class="o_kanban_record_headings mt4">
                                      <strong>Package Name: </strong><div class="o_kanban_record_title"><field name="package_name"/></div>
                                  </div>
                              </div>
                              <div class="o_kanban_record_top mb16">
                                  <div class="o_kanban_record_headings mt4">
                                      <strong>Store Regulation Entry: </strong><div class="o_kanban_record_title"><field name="store_regulation_entry_id"/></div>
                                  </div>
                              </div>
                          </div>
                      </t>
                  </templates>
              </kanban>
          </field>
      </record>

      <record id="view_store_regulations_tree" model="ir.ui.view">
          <field name="name">store.regulations.tree</field>
          <field name="model">store.regulations</field>
          <field name="priority">2</field>
          <field name="arch" type="xml">
              <tree string="Store Regulations">
                  <field name="package_name"/>
                  <field name="store_regulation_entry_id"/>
              </tree>
          </field>
      </record>

      <record id="view_store_regulations_form" model="ir.ui.view">
          <field name="name">store.regulations.form</field>
          <field name="model">store.regulations</field>
          <field name="arch" type="xml">
              <form string="Store Regulations">
              <sheet>
                  <group>
                      <group>
                          <field name="package_name"/>
                          <field name="store_regulation_entry_id"/>
                      </group>
                  </group>
              </sheet>
              </form>
          </field>
      </record>

      <record id="view_store_regulations_filter" model="ir.ui.view">
          <field name="name">store.regulations.list.select</field>
          <field name="model">store.regulations</field>
          <field name="priority" eval="15"/>
          <field name="arch" type="xml">
              <search string="Search Store Regulations">
                  <field name="package_name"/>
                  <field name="store_regulation_entry_id"/>
                  <group expand="0" string="Group By">
                      <filter string="Package Name" name="package_name" domain="[]" context="{'group_by': 'package_name'}"/>
                  </group>
             </search>
          </field>
      </record>

      <record id="action_store_regulations_open" model="ir.actions.act_window">
          <field name="name">Store Regulations</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">store.regulations</field>
          <field name="view_mode">kanban,tree,form</field>
          <field name="search_view_id"/>
          <field name="context">{}</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                  To create a new record
              </p><p>
                  <br/> Click on "Create"
              </p>
          </field>
      </record>

      <record id="store_regulations_action_view_kanban" model="ir.actions.act_window.view">
          <field name="sequence" eval="1"/>
          <field name="view_mode">kanban</field>
          <field name="view_id" ref="ihhg_master.view_store_regulations_kanban"/>
          <field name="act_window_id" ref="action_store_regulations_open"/>
      </record>

      <record id="store_regulations_action_view_tree" model="ir.actions.act_window.view">
          <field name="sequence" eval="2"/>
          <field name="view_mode">tree</field>
          <field name="view_id" ref="ihhg_master.view_store_regulations_tree"/>
          <field name="act_window_id" ref="action_store_regulations_open"/>
      </record>

      <record id="store_regulations_action_view_form" model="ir.actions.act_window.view">
          <field name="sequence" eval="3"/>
          <field name="view_mode">form</field>
          <field name="view_id" ref="ihhg_master.view_store_regulations_form"/>
          <field name="act_window_id" ref="action_store_regulations_open"/>
      </record>
  </data>
</odoo>
