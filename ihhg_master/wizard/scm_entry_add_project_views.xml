<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_scm_entry_add_project" model="ir.ui.view">
        <field name="name">view_scm_entry_add_project</field>
        <field name="model">scm.entry.add.project</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="project_selection" widget="radio"/>
                    <field name="project_exist_id" attrs="{'invisible':[('project_selection', '=', 'create_project_from_template')]}"/>
                    <field name="project_template_id" attrs="{'invisible':[('project_selection', '=', 'select_existing_project')]}"/>
                    <field name="project_name_new" attrs="{'invisible':[('project_selection', '=', 'select_existing_project')]}"/>
                </group>
                <footer>
                    <button
                        name="action_confirm"
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
