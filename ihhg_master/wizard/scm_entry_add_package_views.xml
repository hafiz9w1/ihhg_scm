<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_scm_entry_add_package" model="ir.ui.view">
        <field name="name">view_scm_entry_add_package</field>
        <field name="model">scm.entry.add.package</field>
        <field name="arch" type="xml">
            <form>
                <group string="Select packages">
                    <field name="scm_id" invisible="1" />
                    <field name="channel_ids" invisible="1" />
                    <field name="package_ids" nolabel="1" />
                </group>
                <footer>
                    <button
                        name="action_confirm"
                        string="Add Package"
                        type="object"
                        class="oe_highlight"
                    />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
